{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es2015" ],
        "declaration": true,
        "allowJs": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types/",
            "./src/@types"
        ]
    },
    "include": [
        "src/**/*",
    ]
}